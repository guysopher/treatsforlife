    <div class="clearfix"></div>
    <div class="spacer"><img src="/assets/split.svg" alt=""></div>
    <div class="details">
      <table class="table">
        <tr>
          <td>breed</td>
          <td colspan="2" class="highlight">
            <%= @pet['breed'] %>
          </td>
        </tr>
        <tr>
          <td>gender</td>
          <td>
            <span class="a1 <%= @pet['gender']=='Male' ? 'active' : '' %>"></span>
            <span class="a2 <%= @pet['gender']=='Male' ? '' : 'active' %>"></span>
          </td>
          <td>male</td>
        </tr>
        <tr>
          <td>age</td>
          <td>
            <span class="a3 <%= @pet['age']=='Puppy' ? 'active' : '' %>"></span>
            <span class="a4 <%= @pet['age']=='Young' ? 'active' : '' %>"></span>
            <span class="a5 <%= @pet['age']=='Adult' ? 'active' : '' %>"></span>
          </td>
          <td><%= @pet['age'] %></td>
        </tr>
        <tr>
          <td>size</td>
          <td>
            <span class="a6 <%= @pet['size']=='Small' ? 'active' : '' %>"></span>
            <span class="a7 <%= @pet['size']=='Med.' ? 'active' : '' %>"></span>
            <span class="a8 <%= @pet['size']=='Large' ? 'active' : '' %>"></span>
          </td>
          <td><%= @pet['size'] %></td>
        </tr>
        <tr>
          <td>education</td>
          <td>
            <span class="a9 <%= @pet['info']['neutered'] ? '' : 'active' %>"></span>
            <span class="a10 <%= (@pet['info']['neutered'] && !@pet['info']['good with']) ? 'active' : '' %>"></span>
            <span class="a11 <%= (@pet['info']['neutered'] && @pet['info']['good with']) ? 'active' : '' %>"></span>
          </td>
          <td><%=@pet['info']%></td>
        </tr>
      </table>
    </div>
    <div class="clearfix"></div>
    <div class="spacer"><img src="/assets/split.svg" alt=""></div>
    <% if (@pet['videos'] && @pet['videos'].length>0) %>
    <div class="video">
      <div class="title"><span class="blue">Videos of</span> <%=@pet['name']%></div>
      <div class="videos">
        <% @pet['videos'].each do |v| %>
            <video id="video" autobuffer controls width="100%">
              <source src="<%= v %>" type="video/mp4"/>
            </video>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>

</div>



